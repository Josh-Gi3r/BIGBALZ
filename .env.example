# BIGBALZ Bot Configuration Template
# Copy this file to .env and fill in your actual values

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///bigbalz.db
# For PostgreSQL: postgresql://user:password@localhost:5432/bigbalz
REDIS_URL=redis://localhost:6379/0

# API Configuration
GECKOTERMINAL_BASE_URL=https://api.geckoterminal.com/api/v2
API_RATE_LIMIT=30
API_TIMEOUT=30

# Background Monitoring (in seconds)
MOONSHOT_SCAN_INTERVAL=60
RUG_SCAN_INTERVAL=60
STATUS_REPORT_INTERVAL=2700

# Session Management
SESSION_TTL_MINUTES=30
MAX_SESSIONS=10000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bigbalz.log

# Performance
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# Admin Configuration (for health alerts)
ADMIN_CHAT_ID=your_admin_telegram_chat_id
ALLOWED_DM_USERS=831955563,another_user_id

# Environment
ENVIRONMENT=development
